{
  "name": "lorem-ipsum",
  "version": "2.0.0-alpha.4",
  "description": "Generates passages of lorem ipsum text suitable for use as placeholder copy in web pages, graphics, and more. Works in the browser, NodeJS, and React Native.",
  "author": "Nickolas Kenyeres <nkenyeres@gmail.com> (http://knicklabs.github.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/knicklabs/node-lorem-ipsum.git"
  },
  "main": "dist/index",
  "bin": {
    "lorem-ipsum": "dist/bin/lorem-ipsum.bin.js"
  },
  "scripts": {
    "build": "webpack",
    "lint:check": "tslint -c tslint.json src/**/*.ts",
    "test": "jest --coverage",
    "release": "npm run build && release-it",
    "release:dry": "npm run build && release-it --dry-run",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov"
  },
  "keywords": [
    "lorem",
    "ipsum",
    "placeholder",
    "text",
    "dummy",
    "filler"
  ],
  "engines": {
    "node": ">= 8.x",
    "npm": ">= 5.x"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.0.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "@types/random-seed": "^0.3.3",
    "@types/react-native": "^0.56.15",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "nock-exec": "^0.1.0",
    "nyc": "^13.3.0",
    "prettier": "^1.14.2",
    "release-it": "^10.1.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "commander": "^2.17.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/bin/**/*.ts",
      "!src/constants/cli.ts",
      "!src/@types/**/*.d.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
